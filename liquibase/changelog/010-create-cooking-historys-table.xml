<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.8.xsd">

    <!-- Create cooking_historys table -->
    <changeSet id="010-create-cooking-historys-table" author="your_name">
        <createTable tableName="cooking_historys">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_cooking_historys"/>
            </column>
            <column name="userId" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="recipeId" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="createdAt" type="DATETIME" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Foreign Key Constraint: userId -> users.id -->
        <addForeignKeyConstraint baseTableName="cooking_historys"
                                 baseColumnNames="userId"
                                 constraintName="fk_cooking_historys_user"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <!-- Foreign Key Constraint: recipeId -> recipes.id -->
        <addForeignKeyConstraint baseTableName="cooking_historys"
                                 baseColumnNames="recipeId"
                                 constraintName="fk_cooking_historys_recipe"
                                 referencedTableName="recipes"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <!-- Index on id -->
        <createIndex indexName="ix_cooking_historys_id" tableName="cooking_historys">
            <column name="id"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>
